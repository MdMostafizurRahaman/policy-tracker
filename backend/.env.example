# AI Policy Tracker Environment Variables
# Copy this file to .env and update with your actual values

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-here-change-in-production

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/ai_policy_tracker

# Email Configuration (for notifications and account verification)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@aipolicytracker.com

# AI Analysis Configuration
# Get your Groq API key from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# File Upload Limits
MAX_FILE_SIZE_MB=10

# Development/Production
ENVIRONMENT=development
DEBUG=true
